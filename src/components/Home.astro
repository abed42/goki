---
import gokiApe from "../assets/goki-ape.svg";
import Button from "./Button.astro";
---

<div class="flex flex-col justify-center items-center mt-20 gap-12">
  <img
    class="w-1/2 sm:w-2/5 md:w-1/3 lg:w-1/4 xl:w-1/5 transform scale-100 animate-[scale-up_1s_ease-out_forwards] md:mt-12"
    src={gokiApe.src}
    alt="Goki Ape"
  />
  <Button href="/menu/german" text="View Menu" />
</div>

<style>
  @keyframes scale-up {
    to {
      transform: scale(1.5);
    }
  }
</style>
